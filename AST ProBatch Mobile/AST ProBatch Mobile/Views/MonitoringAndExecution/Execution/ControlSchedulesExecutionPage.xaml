<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:AST_ProBatch_Mobile.Controls"
             x:Class="AST_ProBatch_Mobile.Views.ControlSchedulesExecutionPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Horarios de Ejecución"
             BackgroundColor="#F1F2F6">
    <ContentPage.ToolbarItems>
        <ToolbarItem BindingContext="{Binding ControlSchedulesExecution}" Text="Referencias"  Icon="about" Command="{Binding StatusInfoCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding ControlSchedulesExecution}">
            <StackLayout
                Padding="5"
                VerticalOptions="FillAndExpand">
                <controls:CustomFrame
                    CornerRadius="10,10,0,0"
                    BackgroundColor="#D7D7D7"
                    Padding="0">
                    <Label
                        FontSize="13"
                        HorizontalOptions="Center"
                        Padding="5"
                        Text="{Binding LogItem.NameLog}"
                        TextColor="#2255AA"
                        FontAttributes="Bold"
                        LineBreakMode="TailTruncation"/>
                </controls:CustomFrame>
                <controls:CustomFrame
                    Margin="0,-7,0,0"
                    CornerRadius="0,0,10,10"
                    Padding="0"
                    BackgroundColor="DarkGray">
                        <StackLayout>
                        <ListView
                            x:Name="CommandsToControlListView"
                            ItemsSource="{Binding CommandsToControlItems}"
                            BackgroundColor="Transparent"
                            ItemSelected="CommandsToControlListView_ItemSelected">
                            <ListView.SeparatorVisibility>
                                <OnPlatform x:TypeArguments="SeparatorVisibility">
                                    <On Platform="iOS" Value="None" />
                                    <On Platform="Android" Value="Default" />
                                </OnPlatform>
                            </ListView.SeparatorVisibility>
                            <ListView.Header>
                                <Grid
                                    Padding="5"
                                    VerticalOptions="Center"
                                    ColumnSpacing="0"
                                    RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="25" />
                                    </Grid.ColumnDefinitions>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="0"/>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="EE"
                                        FontSize="13"/>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="1"/>
                                    <Label
                                        Margin="5,0,0,0"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        Text="Comando"
                                        LineBreakMode="TailTruncation"
                                        FontSize="13"/>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="2"/>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Inicio"
                                        LineBreakMode="TailTruncation"
                                        FontSize="13"/>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="3"/>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="Fin"
                                        LineBreakMode="TailTruncation"
                                        FontSize="13"/>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="4"/>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="4"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        HorizontalOptions="Center"
                                        Text="EC"
                                        FontSize="13"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <ViewCell.View>
                                            <Grid
                                                Padding="5"
                                                VerticalOptions="Center"
                                                ColumnSpacing="0"
                                                RowSpacing="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="25" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="25" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="25" />
                                                </Grid.ColumnDefinitions>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="0"/>
                                                <controls:CustomFrame
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Padding="0"
                                                    CornerRadius="17"
                                                    BackgroundColor="{Binding StatusColorEE}">
                                                </controls:CustomFrame>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="1"/>
                                                <Label
                                                    Margin="5,0,0,0"
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    TextColor="Black"
                                                    VerticalOptions="Center"
                                                    Text="{Binding Command}"
                                                    LineBreakMode="TailTruncation"
                                                    FontSize="13"/>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="2"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    TextColor="Black"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding StartDateString}"
                                                    LineBreakMode="TailTruncation"
                                                    FontSize="13"/>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="3"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="3"
                                                    TextColor="Black"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding EndDateString}"
                                                    LineBreakMode="TailTruncation"
                                                    FontSize="13"/>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="4"/>
                                                <controls:CustomFrame
                                                    Grid.Row="0"
                                                    Grid.Column="4"
                                                    Padding="0"
                                                    CornerRadius="17"
                                                    BackgroundColor="{Binding StatusColorEC}">
                                                </controls:CustomFrame>
                                            </Grid>
                                        </ViewCell.View>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </controls:CustomFrame>
            </StackLayout>
            <StackLayout 
                VerticalOptions="End">
                <Label 
                    Text="AST●ProBatch® Workload Automation © 2020"
                    HorizontalTextAlignment="Center"
                    TextColor="#2255AA">
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS" Value="11" />
                            <On Platform="Android" Value="12" />
                        </OnPlatform>
                    </Label.FontSize>
                </Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>