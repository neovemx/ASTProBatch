                        CornerRadius="10,10,0,0"
                        BackgroundColor="#D7D7D7"
                        Padding="0">
                        <Label
                            HorizontalOptions="Center"
                            Padding="5"
                            Text="Dependencias de Recursos"
                            TextColor="#2255AA"
                            FontAttributes="Bold"
                            FontSize="Small"
                            LineBreakMode="TailTruncation"/>
                    </controls:CustomFrame>
                    <controls:CustomFrame
                        Margin="0,-7,0,0"
                        CornerRadius="0,0,10,10"
                        BackgroundColor="DarkGray"
                        Padding="0">
                        <ListView
                            ItemsSource="{Binding DependenciesResourceItems}"
                            SelectionMode="None"
                            BackgroundColor="Transparent"
                            HeightRequest="150">
                            <ListView.SeparatorVisibility>
                                <OnPlatform x:TypeArguments="SeparatorVisibility">
                                    <On Platform="iOS" Value="None" />
                                    <On Platform="Android" Value="Default" />
                                </OnPlatform>
                            </ListView.SeparatorVisibility>
                            <ListView.Header>
                                <Grid
                                    Padding="10"
                                    ColumnSpacing="0"
                                    RowSpacing="0"
                                    VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />   
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <BoxView 
                                        Grid.Row="0"
                                        Grid.Column="0"/>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        FontAttributes="Bold"
                                        VerticalOptions="CenterAndExpand"
                                        Text="Recurso"
                                        LineBreakMode="TailTruncation"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <ViewCell.View>
                                            <Grid
                                                Padding="10"
                                                ColumnSpacing="0"
                                                RowSpacing="0"
                                                VerticalOptions="Center">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="25" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <BoxView 
                                                    Grid.Row="0"
                                                    Grid.Column="0"/>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    TextColor="Black"
                                                    FontSize="Small"
                                                    VerticalOptions="CenterAndExpand"
                                                    Text="{Binding ResourceName}"
                                                    LineBreakMode="TailTruncation"/>
                                            </Grid>
                                        </ViewCell.View>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView> 
                    </controls:CustomFrame>
                </StackLayout>
            </ScrollView>
            <StackLayout 
                VerticalOptions="End">
                <Label 
                    Text="AST●ProBatch® Workload Automation © 2020"
                    HorizontalTextAlignment="Center"
                    TextColor="#2255AA">
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS" Value="11" />
                            <On Platform="Android" Value="12" />
                        </OnPlatform>
                    </Label.FontSize>
                </Label>
            </StackLayout>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>
