                                        Orientation="Horizontal">
                                        <CheckBox
                                            HeightRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding MonthlyBusinessDay}"/>
                                        <Label
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="Hábil:"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <BoxView
                                        Margin="-10,0,-10,0"
                                        HeightRequest="1" 
                                        BackgroundColor="LightGray" 
                                        HorizontalOptions="FillAndExpand">
                                    </BoxView>
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <Label
                                            WidthRequest="80"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="Frecuencia:"
                                            VerticalOptions="CenterAndExpand"/>
