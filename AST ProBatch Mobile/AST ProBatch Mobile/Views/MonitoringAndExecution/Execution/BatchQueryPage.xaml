                                </StackLayout>
                            </StackLayout>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            CornerRadius="10,10,0,0"
                            BackgroundColor="#D7D7D7"
                            Padding="0"
                            IsVisible="{Binding IsVisibleCalendar}">
                            <Label
                                HorizontalOptions="Center"
                                Padding="5"
                                Text="FERIADO"
                                TextColor="#2255AA"
                                FontAttributes="Bold"/>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            Margin="0,-7,0,0"
                            CornerRadius="0,0,10,10"
                            BackgroundColor="DarkGray"
                            Padding="0"
                            VerticalOptions="Fill"
                            IsVisible="{Binding IsVisibleCalendar}">
                            <StackLayout
                                Padding="10">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <CheckBox
                                        IsEnabled="False"
                                        Color="#2255AA"
                                        IsChecked="{Binding Holiday}"/>
                                    <Label
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Incluirlo siempre el día:"
                                        VerticalOptions="CenterAndExpand"/>
                                </StackLayout>
                                <StackLayout
                                    Orientation="Horizontal">
                                    <controls:StandardPicker
                                        Title="..."
                                        ItemsSource="{Binding HolidayItems}"
                                        ItemDisplayBinding="{Binding HolidayName}"
                                        SelectedItem="{Binding HolidaySelected, Mode=TwoWay}"
