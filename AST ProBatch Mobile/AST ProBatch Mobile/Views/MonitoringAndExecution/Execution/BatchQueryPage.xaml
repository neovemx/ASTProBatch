                                            HorizontalOptions="FillAndExpand"
                                            Padding="5"
                                            BackgroundColor="White"
                                            BorderColor="#2255AA"
                                            BorderThickness="1"
                                            CornerRadius="7"
                                            TextColor="#2255AA"
                                            HeightRequest="30"
                                            FontSize="Small"
                                            IsEnabled="False"/>
                                        <Label
                                            WidthRequest="70"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="mes(es)"
                                            VerticalOptions="CenterAndExpand"/>
