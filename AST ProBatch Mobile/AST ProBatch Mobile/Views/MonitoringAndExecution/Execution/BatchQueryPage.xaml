                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        IsEnabled="False"
                                        HorizontalOptions="FillAndExpand"/>
                                    <CheckBox
                                        IsEnabled="False"
                                        HeightRequest="30"
                                        Color="#2255AA"
                                        IsChecked="{Binding End}" />
                                </StackLayout>
                            </StackLayout>
                        </controls:CustomFrame>
                    </StackLayout>
                </ScrollView>
                <StackLayout 
