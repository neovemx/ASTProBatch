<?xml version="1.0" encoding="utf-8"?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="clr-namespace:AST_ProBatch_Mobile.Controls"
    x:Class="AST_ProBatch_Mobile.Views.BatchQueryPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    Title="CONSULTAS DEL LOTE"
    BackgroundColor="White"
    SelectedTabColor="#2255AA"
    UnselectedTabColor="DarkGray"
    BarBackgroundColor="White">
    <ContentPage Title="LOTE" IconImageSource="tab_lot">
        <ContentPage.ToolbarItems>
            <ToolbarItem BindingContext="{Binding BatchQuery}" Text="Buscar"  Icon="search" Command="{Binding SearchParametersCommand}" />
        </ContentPage.ToolbarItems>
        <ContentPage.Content>
            <StackLayout
                BindingContext="{Binding BatchQuery}">
                <ScrollView
                    VerticalOptions="FillAndExpand">
                    <StackLayout
                        Padding="10">
                        <BoxView
                            HeightRequest="1" 
                            BackgroundColor="DarkGray" 
                            HorizontalOptions="FillAndExpand">
                            <BoxView.IsVisible>
                                 <OnPlatform x:TypeArguments="x:Boolean">
                                     <On Platform="iOS" Value="False" />
                                     <On Platform="Android" Value="True" />
                                 </OnPlatform>
                            </BoxView.IsVisible>
                        </BoxView>
                        <controls:CustomFrame
                            CornerRadius="10,10,0,0"
                            BackgroundColor="#D7D7D7"
                            Padding="0">
                            <Label
                                HorizontalOptions="Center"
                                Padding="5"
                                Text="{Binding InstanceItem.Title}"
                                TextColor="#2255AA"
                                FontAttributes="Bold"/>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            Margin="0,-7,0,0"
                            CornerRadius="0,0,10,10"
                            BackgroundColor="DarkGray"
                            Padding="0"
                            VerticalOptions="Fill">
                            <StackLayout
                                 Padding="10">
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Código:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.Code, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        IsEnabled="False"
                                        HorizontalOptions="FillAndExpand"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Nombre:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.Title, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        HorizontalOptions="FillAndExpand"
                                        IsEnabled="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Descripción:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.Description, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        HorizontalOptions="FillAndExpand"
                                        IsEnabled="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Fecha de Creación:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.DateCreation, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        HorizontalOptions="FillAndExpand"
                                        IsEnabled="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Path de Entrada:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.InPath, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        HorizontalOptions="FillAndExpand"
                                        IsEnabled="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Path de Salida:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardEntry
                                        Text="{Binding LotItem.OutPath, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HeightRequest="30"
                                        TextColor="#2255AA"
                                        FontSize="Small"
                                        HorizontalOptions="FillAndExpand"
                                        IsEnabled="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Estado:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardPicker
                                        Title="Seleccione..."
                                        ItemsSource="{Binding StatusItems}"
                                        ItemDisplayBinding="{Binding StatusName}"
                                        SelectedItem="{Binding StatusSelected, Mode=TwoWay}"
                                        SelectedIndex="{Binding StatusIndex, Mode=TwoWay}"
                                        HorizontalOptions="FillAndExpand"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        TextColor="#2255AA"
                                        HeightRequest="30"
                                        FontSize="Small"
                                        IsEnabled="False"/>
                                </StackLayout>
                            </StackLayout>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            CornerRadius="10"
                            Padding="0"
                            BackgroundColor="DarkGray"
                            IsVisible="{Binding ResultIsVisible}"
                            HeightRequest="230">
                            <StackLayout>
                                <StackLayout
                                    Margin="10,15,10,0"
                                    Orientation="Horizontal">
                                    <StackLayout>
                                        <Label
                                            FontAttributes="Bold"
                                            TextColor="#2255AA"
                                            FontSize="Small"
                                            Text="PARAMÉTRO"
                                            LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                    <StackLayout
                                        HorizontalOptions="EndAndExpand">
                                        <Label
                                            FontAttributes="Bold"
                                            TextColor="#2255AA"
                                            FontSize="Small"
                                            Text="VALOR"
                                            LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                </StackLayout>  
                                <StackLayout>
                                    <ListView
                                        ItemsSource="{Binding ParameterItems}"
                                        BackgroundColor="Transparent"
                                        SelectionMode="None"
                                        HeightRequest="235">
                                        <ListView.SeparatorVisibility>
                                            <OnPlatform x:TypeArguments="SeparatorVisibility">
                                                <On Platform="iOS" Value="None" />
                                                <On Platform="Android" Value="Default" />
                                            </OnPlatform>
                                        </ListView.SeparatorVisibility>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <ViewCell.View>
                                                        <StackLayout
                                                            Margin="10,0,10,0"
                                                            Orientation="Horizontal">
                                                            <StackLayout
                                                                VerticalOptions="Center">
                                                                <Label
                                                                    TextColor="Black"
                                                                    FontSize="Small"
                                                                    Text="{Binding Title}"
                                                                    LineBreakMode="TailTruncation"/>
                                                            </StackLayout>
                                                            <StackLayout
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="EndAndExpand">
                                                                <Label
                                                                    TextColor="Black"
                                                                    FontSize="Small"
                                                                    Text="{Binding Value}"
                                                                    LineBreakMode="TailTruncation"/>
                                                            </StackLayout>
                                                        </StackLayout>
                                                    </ViewCell.View>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackLayout>
                            </StackLayout>
                        </controls:CustomFrame>
                    </StackLayout>
                </ScrollView>
                <StackLayout 
                    VerticalOptions="End">
                    <Label 
                        Text="AST●ProBatch® Workload Automation © 2020"
                        HorizontalTextAlignment="Center"
                        TextColor="#2255AA">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS" Value="11" />
                                <On Platform="Android" Value="12" />
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="COMANDO" IconImageSource="tab_command">
        <ContentPage.ToolbarItems>
            <ToolbarItem BindingContext="{Binding BatchQuery}" Text="Buscar"  Icon="search" Command="{Binding SearchCommandsCommand}" />
        </ContentPage.ToolbarItems>
        <ContentPage.Content>
            <StackLayout
                BindingContext="{Binding BatchQuery}">
                <ScrollView
                    VerticalOptions="FillAndExpand">
                    <StackLayout
                        Padding="10">
                        <BoxView
                            HeightRequest="1" 
                            BackgroundColor="DarkGray" 
                            HorizontalOptions="FillAndExpand">
                            <BoxView.IsVisible>
                                 <OnPlatform x:TypeArguments="x:Boolean">
                                     <On Platform="iOS" Value="False" />
                                     <On Platform="Android" Value="True" />
                                 </OnPlatform>
                            </BoxView.IsVisible>
                        </BoxView>
                        <controls:CustomFrame
                            CornerRadius="10,10,0,0"
                            BackgroundColor="#D7D7D7"
                            Padding="0">
                            <Label
                                HorizontalOptions="Center"
                                Padding="5"
                                Text="{Binding InstanceItem.Title}"
                                TextColor="#2255AA"
                                FontAttributes="Bold"/>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            Margin="0,-7,0,0"
                            CornerRadius="0,0,10,10"
                            BackgroundColor="DarkGray"
                            Padding="0"
                            VerticalOptions="FillAndExpand">
                            <StackLayout>
                                <StackLayout
                                    Margin="10,15,10,0"
                                    Orientation="Horizontal">
                                    <StackLayout
                                        HorizontalOptions="FillAndExpand">
                                        <Label
                                            FontAttributes="Bold"
                                            TextColor="#2255AA"
                                            FontSize="Small"
                                            Text="COMANDO"
                                            LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                    <StackLayout
                                        HorizontalOptions="End"
                                        WidthRequest="55">
                                        <Label
                                            HorizontalOptions="Center"
                                            FontAttributes="Bold"
                                            TextColor="#2255AA"
                                            FontSize="Small"
                                            Text="CRÍTICO"
                                            LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                    <StackLayout
                                        HorizontalOptions="End"
                                        WidthRequest="55">
                                        <Label
                                            HorizontalOptions="Center"
                                            FontAttributes="Bold"
                                            TextColor="#2255AA"
                                            FontSize="Small"
                                            Text="ESTADO"
                                            LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                </StackLayout>  
                                <StackLayout
                                    VerticalOptions="FillAndExpand">
                                    <ListView
                                        ItemsSource="{Binding CommandItems}"
                                        BackgroundColor="Transparent"
                                        SelectionMode="None"
                                        HeightRequest="235">
                                        <ListView.SeparatorVisibility>
                                            <OnPlatform x:TypeArguments="SeparatorVisibility">
                                                <On Platform="iOS" Value="None" />
                                                <On Platform="Android" Value="Default" />
                                            </OnPlatform>
                                        </ListView.SeparatorVisibility>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <ViewCell.View>
                                                        <StackLayout
                                                            Margin="10,0,10,0"
                                                            Orientation="Horizontal">
                                                            <StackLayout
                                                                HorizontalOptions="FillAndExpand"
                                                                VerticalOptions="Center">
                                                                <Label
                                                                    TextColor="Black"
                                                                    FontSize="Small"
                                                                    Text="{Binding Title}"
                                                                    LineBreakMode="TailTruncation"/>
                                                            </StackLayout>
                                                            <StackLayout
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="End"
                                                                WidthRequest="55">
                                                                <CheckBox
                                                                    HorizontalOptions="Center"
                                                                    IsChecked="{Binding Critical}"
                                                                    Color="#2255AA"
                                                                    IsEnabled="False"/>
                                                            </StackLayout>
                                                            <StackLayout
                                                                VerticalOptions="Center"
                                                                HorizontalOptions="End"
                                                                WidthRequest="55">
                                                                <Label
                                                                    HorizontalOptions="Center"
                                                                    TextColor="Black"
                                                                    FontSize="Small"
                                                                    Text="{Binding Status}"
                                                                    LineBreakMode="TailTruncation"/>
                                                            </StackLayout>
                                                        </StackLayout>
                                                    </ViewCell.View>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackLayout>
                            </StackLayout>
                        </controls:CustomFrame>
                    </StackLayout>
                </ScrollView>
                <StackLayout 
                    VerticalOptions="End">
                    <Label 
                        Text="AST●ProBatch® Workload Automation © 2020"
                        HorizontalTextAlignment="Center"
                        TextColor="#2255AA">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS" Value="11" />
                                <On Platform="Android" Value="12" />
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="CALENDARIO" IconImageSource="tab_calendar">
        <ContentPage.ToolbarItems>
            <ToolbarItem BindingContext="{Binding BatchQuery}" Text="Buscar"  Icon="search" Command="{Binding SearchCalendarCommand}" />
        </ContentPage.ToolbarItems>
        <ContentPage.Content>
            <StackLayout
                BindingContext="{Binding BatchQuery}">
                <ScrollView
                    VerticalOptions="FillAndExpand">
                    <StackLayout
                        Padding="10">
                        <BoxView
                            HeightRequest="1" 
                            BackgroundColor="DarkGray" 
                            HorizontalOptions="FillAndExpand">
                            <BoxView.IsVisible>
                                 <OnPlatform x:TypeArguments="x:Boolean">
                                     <On Platform="iOS" Value="False" />
                                     <On Platform="Android" Value="True" />
                                 </OnPlatform>
                            </BoxView.IsVisible>
                        </BoxView>
                        <controls:CustomFrame
                            CornerRadius="10,10,0,0"
                            BackgroundColor="#D7D7D7"
                            Padding="0"
                            IsVisible="{Binding IsVisibleCalendar}">
                            <Label
                                HorizontalOptions="Center"
                                Padding="5"
                                Text="FRECUENCIA"
                                TextColor="#2255AA"
                                FontAttributes="Bold"/>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            Margin="0,-7,0,0"
                            CornerRadius="0,0,10,10"
                            BackgroundColor="DarkGray"
                            Padding="0"
                            VerticalOptions="Fill"
                            IsVisible="{Binding IsVisibleCalendar}">
                            <StackLayout
                                Padding="10">
                                <StackLayout
                                    HorizontalOptions="FillAndExpand">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        TextColor="#2255AA"
                                        Text="DIARIA"
                                        IsVisible="{Binding IsDaily}"/>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        TextColor="#2255AA"
                                        Text="SEMANAL"
                                        IsVisible="{Binding IsWeekly}"/>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        TextColor="#2255AA"
                                        Text="MENSUAL"
                                        IsVisible="{Binding IsMonthly}"/>
                                </StackLayout>
                                <BoxView
                                    Margin="-10,0,-10,0"
                                    HeightRequest="1" 
                                    BackgroundColor="LightGray" 
                                    HorizontalOptions="FillAndExpand">
                                </BoxView>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    IsVisible="{Binding IsDaily}">
                                    <Label
                                        WidthRequest="80"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Cada:"
                                        VerticalOptions="CenterAndExpand"/>
                                    <controls:StandardPicker
                                        Title="Seleccione..."
                                        ItemsSource="{Binding DayItems}"
                                        ItemDisplayBinding="{Binding DayName}"
                                        SelectedItem="{Binding DaySelected, Mode=TwoWay}"
                                        SelectedIndex="{Binding DailyDay, Mode=TwoWay}"
                                        Padding="5"
                                        BackgroundColor="White"
                                        BorderColor="#2255AA"
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        TextColor="#2255AA"
                                        WidthRequest="50"
                                        HeightRequest="30"
                                        FontSize="Small"
                                        IsEnabled="False"/>
                                    <Label
                                        WidthRequest="130"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Día(s)"
                                        VerticalOptions="CenterAndExpand"/>
                                </StackLayout>
                                <StackLayout
                                    IsVisible="{Binding IsWeekly}">
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <CheckBox
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding SpecificDays}"/>
                                        <Label
                                            WidthRequest="130"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="Días específicos:"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout
                                        Orientation="Horizontal"
                                        HorizontalOptions="CenterAndExpand">
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="L"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="M"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="M"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="J"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="V"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="S"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="D"
                                            FontSize="Small"
                                            WidthRequest="30"
                                            TextColor="#2255AA"/>
                                        <Label
                                            HorizontalTextAlignment="Center"
                                            Text="Hábiles"
                                            FontSize="Small"
                                            WidthRequest="50"
                                            TextColor="#2255AA"/>
                                    </StackLayout>
                                    <StackLayout
                                        Orientation="Horizontal"
                                        HorizontalOptions="CenterAndExpand">
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Monday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Tuesday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Wednesday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Thursday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Friday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Saturday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding Sunday}"/>
                                        <CheckBox
                                            HorizontalOptions="Center"
                                            WidthRequest="50"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding SpecificDaysBusinessDay}"/>
                                    </StackLayout>
                                    <BoxView
                                        Margin="-10,0,-10,0"
                                        HeightRequest="1" 
                                        BackgroundColor="LightGray" 
                                        HorizontalOptions="FillAndExpand">
                                    </BoxView>
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <CheckBox
                                            HeightRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding BusinessDays}"/>
                                        <Label
                                            WidthRequest="80"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="El día hábil:"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout>
                                        <controls:StandardPicker
                                            Title="..."
                                            ItemsSource="{Binding TheBusinessDayItems}"
                                            ItemDisplayBinding="{Binding TheBusinessDayName}"
                                            SelectedItem="{Binding TheBusinessDaySelected, Mode=TwoWay}"
                                            SelectedIndex="{Binding TheBusinessDay, Mode=TwoWay}"
                                            HorizontalOptions="FillAndExpand"
                                            Padding="5"
                                            BackgroundColor="White"
                                            BorderColor="#2255AA"
                                            BorderThickness="1"
                                            CornerRadius="7"
                                            TextColor="#2255AA"
                                            HeightRequest="30"
                                            FontSize="Small"
                                            IsEnabled="False"/>
                                    </StackLayout>
                                    <BoxView
                                        Margin="-10,0,-10,0"
                                        HeightRequest="1" 
                                        BackgroundColor="LightGray" 
                                        HorizontalOptions="FillAndExpand">
                                    </BoxView>
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <Label
                                            WidthRequest="80"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="Frecuencia:"
                                            VerticalOptions="CenterAndExpand"/>
                                        <controls:StandardPicker
                                            Title="..."
                                            ItemsSource="{Binding EveryWeeksItems}"
                                            ItemDisplayBinding="{Binding EveryWeeksName}"
                                            SelectedItem="{Binding EveryWeeksSelected, Mode=TwoWay}"
                                            SelectedIndex="{Binding EveryWeeks, Mode=TwoWay}"
                                            HorizontalOptions="FillAndExpand"
                                            Padding="5"
                                            BackgroundColor="White"
                                            BorderColor="#2255AA"
                                            BorderThickness="1"
                                            CornerRadius="7"
                                            TextColor="#2255AA"
                                            HeightRequest="30"
                                            FontSize="Small"
                                            IsEnabled="False"/>
                                        <Label
                                            WidthRequest="70"
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="semana(s)"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout
                                    IsVisible="{Binding IsMonthly}">
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <CheckBox
                                            HeightRequest="30"
                                            IsEnabled="False"
                                            Color="#2255AA"
                                            IsChecked="{Binding DaysMonth}"/>
                                        <Label
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="Días del mes:"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <controls:StandardPicker
                                            Title="..."
                                            ItemsSource="{Binding DaysMonthStartItems}"
                                            ItemDisplayBinding="{Binding DaysMonthStartName}"
                                            SelectedItem="{Binding DaysMonthStartSelected, Mode=TwoWay}"
                                            SelectedIndex="{Binding DaysMonthStart, Mode=TwoWay}"
                                            HorizontalOptions="FillAndExpand"
                                            Padding="5"
                                            BackgroundColor="White"
                                            BorderColor="#2255AA"
                                            BorderThickness="1"
                                            CornerRadius="7"
                                            TextColor="#2255AA"
                                            HeightRequest="30"
                                            FontSize="Small"
                                            IsEnabled="False"/>
                                        <Label
                                            TextColor="#2255AA"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="dia y los subsiguientes"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout
                                        Orientation="Horizontal">
                                        <controls:StandardPicker
                                            Title="..."
                                            ItemsSource="{Binding DaysMonthEndItems}"
                                            ItemDisplayBinding="{Binding DaysMonthEndName}"
                                            SelectedItem="{Binding DaysMonthEndSelected, Mode=TwoWay}"
                                            SelectedIndex="{Binding DaysMonthEnd, Mode=TwoWay}"
                                            HorizontalOptions="FillAndExpand"
                                            Padding="5"
                                            BackgroundColor="White"
                                            BorderColor="#2255AA"
                                            BorderThickness="1"
                                            CornerRadius="7"
                                            TextColor="#2255AA"
                                            HeightRequest="30"
                                            FontSize="Small"
