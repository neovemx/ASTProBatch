                                HorizontalOptions="Center"
                                Padding="5"
                                Text="DURACIÓN"
                                TextColor="#2255AA"
                                FontAttributes="Bold"/>
                        </controls:CustomFrame>
                        <controls:CustomFrame
                            Margin="0,-7,0,0"
