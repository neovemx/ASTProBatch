                                        IsEnabled="False"
                                        HeightRequest="30"
                                        Color="#2255AA"
                                        IsChecked="{Binding Start}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        WidthRequest="80"
                                        TextColor="#2255AA"
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="Termina el:"
                                        VerticalOptions="CenterAndExpand"/>
